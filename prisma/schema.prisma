generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Admission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name              String
  dob               DateTime
  gender            String
  place             String
  fathersName       String
  fathersOccupation String
  mothersName       String
  mothersOccupation String
  address           String
  contactNumber     String
  whatsappNumber    String
  school            String
  examBoard         String
  examBoardOther    String?
  madrasaEducation  String
  madrasaBoard      String
  interestedStream  String

  achievements    String? @db.Text
  talentsArts     String? @db.Text
  talentsSports   String? @db.Text
  favoriteLeader  String?
  roleModel       String?
  lastReadBook    String?
  ambition        String? @db.Text
  muslimPriority  String? @db.Text
  optionalIbadath String? @db.Text
  technicalSkills String? @db.Text
  socialMedia     String? @db.Text
  youtubeHabits   String? @db.Text
  sourceOfInfo    String?
  visitedSocials  String?
}
